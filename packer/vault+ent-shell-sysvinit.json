{
  "variables": {
    "aws_access_key_id": "{{ env `AWS_ACCESS_KEY_ID` }}",
    "aws_secret_access_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
    "region": "{{ env `AWS_REGION` }}",
    "environment": "{{ env `PACKER_ENVIRONMENT` }}",
    "vaulturl": "{{ env `VAULT_URL` }}",
    "github_token": "{{ env `GITHUB_TOKEN` }}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{ user `aws_access_key_id` }}",
    "secret_key": "{{ user `aws_secret_access_key` }}",
    "region": "{{user `region`}}",
    "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
    "ssh_pty": true,
    "instance_type": "t2.medium",
    "associate_public_ip_address": true,

    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "*RHEL-6.7_HVM_GA-*",
        "root-device-type": "ebs"
      },
      "owners": ["309956199498"],
      "most_recent": true
    },
    "ssh_username": "ec2-user",
    "ssh_timeout": "5m",

    "ami_virtualization_type": "hvm",
    "ami_description": "Vault Server",
    "ami_name": "se-vault-0.6.5-RHEL6.7-{{isotime \"2006-01-02-1504\"}}",
    "tags": {
      "Name": "{{user `environment`}} Vault Server",
      "System": "Vault OSS",
      "Component": "Vault",
      "OS": "RHEL-6.7"
    }
  }],
  "provisioners": [
  {
    "type": "shell",
    "start_retry_timeout": "10m",
    "inline": [
      "/usr/bin/sudo /sbin/setenforce 0",
      "/usr/bin/sudo yum -y install redhat-lsb-core unzip wget curl",
      "/usr/bin/sudo sed -i 's/(^SELINUX=).*/SELINUX=disabled/' /etc/sysconfig/selinux",
      "/usr/bin/sudo curl -o /etc/init.d/vault https://raw.githubusercontent.com/hashicorp-scripts/vault/master/init/vault.sysvinit?token={{ user `github_token` }}",
      "/usr/bin/sudo curl -o /bin/generatecert https://raw.githubusercontent.com/hashicorp-scripts/common/master/generate-certs/generatecert.sh?token={{ user `github_token` }}"
    ]
  },
  {
    "type": "shell",
    "start_retry_timeout": "10m",
    "inline": [
      "sudo yum -y update nss openssl",
            "/bin/curl -o /tmp/vault_dl_install.sh https://raw.githubusercontent.com/hashicorp-scripts/vault/master/install-generic/vault_dl_install.sh?token={{ user `github_token` }}",
            "/usr/bin/sudo chmod +x /tmp/vault_dl_install.sh",
            "/usr/bin/sudo /tmp/vault_dl_install.sh {{ user `vaulturl` }}",
            "/usr/bin/sudo chmod +x /bin/generatecert",
            "/usr/bin/sudo chmod +x /etc/init.d/vault",
            "/usr/bin/sudo /bin/generatecert vault",
            "/usr/bin/sudo curl -o /etc/vault/config.hcl https://raw.githubusercontent.com/hashicorp-scripts/vault/master/config/config.hcl.inmem?token={{ user `github_token` }}",
            "/usr/bin/sudo curl -o /etc/vault/ui.hcl https://raw.githubusercontent.com/hashicorp-scripts/vault/master/config/ui.hcl?token={{ user `github_token` }}",
            "/usr/bin/sudo service vault start"
    ]
  },
  {
    "type": "shell",
    "start_retry_timeout": "5m",
    "inline": [
      "sudo yum -y remove puppet-agent puppetlabs-release-pc1",
    "sudo rm -rf /etc/puppetlabs",
    "sudo rm -rf /var/lib/cloud/instances/*",
    "sudo rm -f /root/.ssh/authorized_keys",
    "sudo rm -f /home/ec2-user/.ssh/authorized_keys",
    "history -cw"
    ]
  }
  ]
}
